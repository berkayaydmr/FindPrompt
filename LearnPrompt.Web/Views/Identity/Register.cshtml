@model LearnPrompt.Web.Models.Auth.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<section class="max-w-3xl space-y-6">
    <div>
        <p class="text-sm font-semibold uppercase tracking-wider text-indigo-600">Kayıt Ol</p>
        <h1 class="mt-1 text-2xl font-semibold text-slate-900">Hesap oluşturun</h1>
    </div>

    <form asp-action="Register"
          asp-controller="Identity"
          asp-route-returnUrl="@Model.ReturnUrl"
          method="post"
          class="space-y-6 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">

        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-sm text-rose-500"></div>

        <div>
            <label asp-for="Email" class="text-sm font-medium text-slate-700"></label>
            <input asp-for="Email" class="mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" />
            <span asp-validation-for="Email" class="mt-1 block text-sm text-rose-500"></span>
        </div>

        <div>
            <label asp-for="Password" class="text-sm font-medium text-slate-700">Şifre</label>
            <input asp-for="Password" type="password" class="mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" />
            <span asp-validation-for="Password" class="mt-1 block text-sm text-rose-500"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="text-sm font-medium text-slate-700">Şifre Tekrar</label>
            <input asp-for="ConfirmPassword" type="password" class="mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" />
            <span asp-validation-for="ConfirmPassword" class="mt-1 block text-sm text-rose-500"></span>
        </div>

        <div class="flex flex-wrap gap-3 text-sm font-semibold">
            <button type="submit" class="rounded-xl bg-indigo-600 px-5 py-3 text-white shadow-sm transition hover:bg-indigo-500">
                Kayıt Ol
            </button>
            <a asp-action="Login" asp-controller="Identity" class="rounded-xl border border-slate-200 px-5 py-3 text-slate-600 transition hover:border-indigo-200">
                Giriş Yap
            </a>
            <a asp-action="Index" asp-controller="Home" class="rounded-xl border border-slate-200 px-5 py-3 text-slate-600 transition hover:border-indigo-200">
                Anasayfa
            </a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}