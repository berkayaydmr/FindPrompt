@{
    ViewData["Title"] = "Yeni Kurs";
}

<section class="max-w-3xl space-y-6">
    <div>
        <p class="text-sm font-semibold uppercase tracking-wider text-indigo-600">Kurs oluştur</p>
        <h1 class="text-3xl font-semibold text-slate-900">Yeni kurs bilgilerini gir</h1>
        <p class="mt-2 text-sm text-slate-500">Başlık zorunludur, diğer alanları istediğin zaman güncelleyebilirsin.</p>
    </div>

    <form asp-action="Create" method="post" class="space-y-6 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        @Html.AntiForgeryToken()

        <div>
            <label class="text-sm font-medium text-slate-700">Başlık</label>
            <input name="title" class="mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" />
            <span class="mt-1 block text-sm text-rose-500">@Html.ValidationMessage("title")</span>
        </div>

        <div>
            <label class="text-sm font-medium text-slate-700">Açıklama</label>
            <textarea name="description" rows="4" class="mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100"></textarea>
        </div>

        <div>
            <label class="text-sm font-medium text-slate-700">Dil</label>
            <input name="language" class="mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:ring-4 focus:ring-indigo-100" placeholder="tr" />
        </div>

        <div class="flex flex-wrap gap-3 text-sm font-semibold">
            <button type="submit" class="rounded-xl bg-indigo-600 px-5 py-3 text-white shadow-sm transition hover:bg-indigo-500">Oluştur</button>
            <a asp-action="Index" class="rounded-xl border border-slate-200 px-5 py-3 text-slate-600 transition hover:border-indigo-200">Vazgeç</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
