@using LearnPrompt.Domain.Constants
@model LearnPrompt.Domain.Entities.Course

@{
    ViewData["Title"] = "Kurs Detayları";
}

@functions {
    string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;

        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }

        return $"{len:0.##} {sizes[order]}";
    }
}

<section class="space-y-8">
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
            <p class="text-sm font-semibold uppercase tracking-wide text-indigo-600">Kurs özet</p>
            <h1 class="text-3xl font-semibold text-slate-900">@Model.Title</h1>
        </div>
        <a asp-action="Index" class="rounded-xl border border-slate-200 px-5 py-3 text-sm font-semibold text-slate-600 transition hover:border-indigo-200">Geri dön</a>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
        <article class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
            <dl class="grid gap-4">
                <div>
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-400">Açıklama</dt>
                    <dd class="mt-1 text-slate-700">@(string.IsNullOrWhiteSpace(Model.Description) ? "-" : Model.Description)</dd>
                </div>
                <div>
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-400">Dil</dt>
                    <dd class="mt-1 text-slate-700">@Model.Language</dd>
                </div>
                <div>
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-400">Oluşturulma</dt>
                    <dd class="mt-1 text-slate-700">@Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</dd>
                </div>
            </dl>
        </article>

        <article class="rounded-3xl border border-dashed border-slate-300 bg-indigo-50/50 p-8 text-slate-700">
            <h2 class="text-lg font-semibold text-indigo-700">İpucu</h2>
            <p class="mt-2 text-sm">Dosyalarını yükledikten sonra işlenme durumlarını "Beklemede" alanından takip edebilirsin.</p>
            <a class="mt-6 inline-flex items-center gap-2 rounded-2xl bg-indigo-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500"
               asp-controller="CourseFiles"
               asp-action="Upload"
               asp-route-courseId="@Model.Id">Dosya Yükle</a>
            <a class="mt-3 inline-flex items-center gap-2 rounded-2xl border border-slate-200 px-5 py-3 text-sm font-semibold text-indigo-700 transition hover:border-indigo-200 hover:bg-white"
               asp-controller="Topics"
               asp-action="Index"
               asp-route-courseId="@Model.Id">Konu Başlıklarını Yönet</a>
        </article>
    </div>

    <section class="space-y-4">
        <div class="flex flex-wrap items-center justify-between gap-3">
            @{
                var totalFiles = Model.Files?.Count ?? 0;
                var processedFiles = Model.Files?.Count(f => f.Status == CourseFileStatus.Completed) ?? 0;
                var processingFiles = Model.Files?.Count(f => f.Status == CourseFileStatus.Processing) ?? 0;
                var failedFiles = Model.Files?.Count(f => f.Status == CourseFileStatus.Failed) ?? 0;
            }
            <div class="space-y-1">
                <h2 class="text-2xl font-semibold text-slate-900">Dosyalar</h2>
                <p class="text-sm text-slate-500">Tamamlanan: @processedFiles / @totalFiles, İşleniyor: @processingFiles, Hata: @failedFiles</p>
            </div>
            <a class="rounded-xl border border-slate-200 px-5 py-2 text-sm font-semibold text-slate-700 transition hover:border-indigo-200"
               asp-controller="CourseFiles"
               asp-action="Upload"
               asp-route-courseId="@Model.Id">Dosya yükle</a>
        </div>

        @if (Model.Files == null || !Model.Files.Any())
        {
            <div class="rounded-2xl border border-dashed border-slate-300 bg-white p-8 text-center text-slate-500">Henüz dosya yüklenmemiş.</div>
        }
        else
        {
            <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white">
                <table class="min-w-full divide-y divide-slate-100 text-sm">
                    <thead class="bg-slate-50">
                        <tr class="text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
                            <th class="px-6 py-3">Dosya</th>
                            <th class="px-6 py-3">Boyut</th>
                            <th class="px-6 py-3">Durum</th>
                            <th class="px-6 py-3">Yüklendi</th>
                            <th class="px-6 py-3"></th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var f in Model.Files)
                        {
                            <tr class="hover:bg-slate-50">
                                <td class="px-6 py-4 font-medium text-slate-900">@f.FileName</td>
                                <td class="px-6 py-4 text-slate-600">@FormatBytes(f.FileSize)</td>
                                <td class="px-6 py-4">
                                    @{
                                        var status = string.IsNullOrWhiteSpace(f.Status) ? CourseFileStatus.Pending : f.Status;
                                        var badgeClass = status switch
                                        {
                                            CourseFileStatus.Completed => "bg-emerald-100 text-emerald-700 border-emerald-200",
                                            CourseFileStatus.Processing => "bg-indigo-100 text-indigo-700 border-indigo-200",
                                            CourseFileStatus.Failed => "bg-rose-100 text-rose-700 border-rose-200",
                                            _ => "bg-slate-100 text-slate-700 border-slate-200"
                                        };
                                        var statusText = status switch
                                        {
                                            CourseFileStatus.Completed => "Tamamlandı",
                                            CourseFileStatus.Processing => "İşleniyor",
                                            CourseFileStatus.Failed => "Hatalı",
                                            _ => "Beklemede"
                                        };
                                    }
                                    <span class="rounded-full border px-3 py-1 text-xs font-semibold @badgeClass">@statusText</span>
                                </td>
                                <td class="px-6 py-4 text-slate-600">@f.UploadedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                                <td class="px-6 py-4 text-right">
                                    @if (!string.IsNullOrWhiteSpace(f.FailedReason))
                                    {
                                        <div class="mb-2 text-xs text-rose-500">@f.FailedReason</div>
                                    }
                                    <form asp-controller="CourseFiles"
                                          asp-action="Delete"
                                          method="post"
                                          onsubmit="return confirm('Dosyayı silmek istediğinize emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@f.Id" />
                                        <button type="submit" class="text-sm font-semibold text-red-600 hover:text-red-500">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </section>
</section>
