<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnPrompt</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-slate-50 text-slate-900 min-h-screen font-sans antialiased">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
    <header class="sticky top-0 z-30 border-b border-slate-200 bg-white/80 backdrop-blur">
        <nav class="mx-auto flex h-16 max-w-6xl items-center justify-between px-4">
            <div class="flex items-center gap-10">
                <a class="text-lg font-semibold tracking-tight text-indigo-600" asp-controller="Home"
                    asp-action="Index">LearnPrompt</a>
                <div class="hidden gap-6 text-sm font-medium text-slate-600 md:flex">
                    <a class="transition hover:text-slate-900" asp-controller="Home" asp-action="Index">Dashboard</a>
                    <a class="transition hover:text-slate-900" asp-controller="Courses" asp-action="Index">Courses</a>
                    <a class="transition hover:text-slate-900" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>

            <partial name="_LoginPartial" />
        </nav>
    </header>
    }

    <div class="mx-auto max-w-6xl px-4 py-10">
        <main class="pb-10">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-slate-200 bg-white/60">
        <div
            class="mx-auto flex max-w-6xl flex-col gap-2 px-4 py-6 text-sm text-slate-500 md:flex-row md:items-center md:justify-between">
            <span>&copy; @DateTime.UtcNow.Year LearnPrompt. All rights reserved.</span>
            <a class="text-indigo-600 transition hover:text-indigo-500" asp-controller="Home" asp-action="Privacy">Privacy
                &amp; Terms</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
