@model List<LearnPrompt.Domain.Entities.Course>

@{
    ViewData["Title"] = "Kurslarım";
}

<section class="space-y-6">
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
            <p class="text-sm font-semibold uppercase tracking-wide text-indigo-600">Kurslar</p>
            <h1 class="text-2xl font-semibold text-slate-900">Tüm kursların tek ekranda</h1>
        </div>
        <a class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500"
           asp-controller="Courses"
           asp-action="Create">
            <span>+ Yeni Kurs</span>
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="rounded-2xl border border-dashed border-slate-300 bg-white/60 p-10 text-center text-slate-500">
            Henüz kurs oluşturmadın. İlk kursunu eklemek için "Yeni Kurs" butonuna tıkla.
        </div>
    }
    else
    {
        <div class="grid gap-4">
            @foreach (var c in Model)
            {
                <article class="rounded-2xl border border-slate-200 bg-white px-6 py-5 shadow-sm transition hover:-translate-y-0.5 hover:border-indigo-200">
                    <div class="flex flex-wrap items-start justify-between gap-4">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-900">@c.Title</h2>
                            <p class="mt-1 text-sm text-slate-500">@c.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</p>
                        </div>
                        <div class="flex items-center gap-2 text-xs font-medium text-slate-500">
                            <span class="rounded-full border border-slate-200 px-3 py-1 uppercase">@c.Language</span>
                        </div>
                    </div>
                    <div class="mt-4 flex justify-end">
                        <a class="rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-indigo-200 hover:text-indigo-600"
                           asp-controller="Courses"
                           asp-action="Details"
                           asp-route-id="@c.Id">Detaylar</a>
                    </div>
                </article>
            }
        </div>
    }
</section>
