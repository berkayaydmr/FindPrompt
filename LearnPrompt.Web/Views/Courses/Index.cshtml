@model List<LearnPrompt.Domain.Entities.Course>

@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Courses</h2>
    <a class="btn btn-primary" asp-controller="Courses" asp-action="Create">+ New Course</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">You have no courses yet.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Language</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Title</td>
                    <td>@c.Language</td>
                    <td>@c.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-end">
                        <a class="btn btn-outline-primary"
                           asp-controller="Courses"
                           asp-action="Details"
                           asp-route-id="@c.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
